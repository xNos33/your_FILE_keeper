!!!
%html
%head
  %title FileCabinet | Your life's work!
  = csrf_meta_tags
  = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
  = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'

%body
  %header
    .header_inner
      = link_to "FileCabinet", root_path, id: "logo"

      %nav
        - if user_signed_in?
          = link_to "Create Doc", new_doc_path, class: "button"
          = link_to "Sign Out", destroy_user_session_path, method: :delete, class: "button"

        - else
          = link_to "log in", new_user_session_path, class: "button"
  
  %p.notice= notice
  %p.alert= alert
  = yield

